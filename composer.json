{
    "name": "mougrim/phpunit-soft-mocks",
    "description": "Simple running phpunit with soft-mocks",
    "type": "library",
    "keywords": [
        "phpunit",
        "soft-mocks"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Mougrim",
            "email": "rinat@mougrim.ru"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "vaimo/composer-patches": "3.4.3",
        "phpunit/phpunit": "^4.0.0 || ^5.0.0",
        "badoo/soft-mocks": "^1.3.0"
    },
    "require-dev": {
        "phpro/grumphp": "^0.12.0",
        "friendsofphp/php-cs-fixer": "^2.7.1"
    },
    "config": {
        "preferred-install": "source"
    },
    "autoload": {
        "psr-4": {
            "Mougrim\\PhpunitSoftMocks\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Mougrim\\PhpunitSoftMocks\\Example\\": "src-example"
        }
    },
    "extra": {
        "enable-patching": true
    }
}
